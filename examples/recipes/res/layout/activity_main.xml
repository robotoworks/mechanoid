<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >
    <Button
        android:id="@+id/button_recipes_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_recipes_simple"
        android:onClick="onExampleClick" />
    
    <Button
        android:id="@+id/button_recipes_with_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_recipes_with_author"
        android:onClick="onExampleClick" />
    
    <Button
        android:id="@+id/button_recipes_and_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_recipes_and_ingredients"
        android:onClick="onExampleClick" />

</LinearLayout>